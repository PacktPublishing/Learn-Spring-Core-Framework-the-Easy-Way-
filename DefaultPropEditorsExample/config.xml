<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
	http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

	<bean id="sampleBean" class="org.company.SampleBean">
		<constructor-arg type="Integer" value="11011" />
		<constructor-arg type="Double" value="3.14" />
		<constructor-arg type="Character" value="%" />
		<constructor-arg type="String" value="stringLiteral" />
		<constructor-arg type="java.util.Currency" value="USD" />
		<constructor-arg type="java.net.URL" value="https://www.entirejava.com" />
	</bean>


</beans>